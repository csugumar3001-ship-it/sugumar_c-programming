#include<stdio.h>
int main(){
    int i,j,n,m,max;
    
    printf("enter the array n:");
    scanf("%d",&n);
    printf("enter the array m:");
    scanf("%d",&m);
     int arr[n][m];
    for(i=0;i<n;i++){
        for(j=0;j<m;j++)
        {
            scanf("%d",&arr[i][j]);
        }
    }
    for(i=0;i<n;i++){
        for(j=0;j<m;j++)
        {
         printf(" %d",arr[i][j]);
        }  
        printf("\n");
    }
    for(i=0;i<n;i++)
        {
            int max=arr[i][0];
            
            for(j=0;j<m;j++){
                if(max<arr[i][j])
                {
                    max=arr[i][j];
                }
           
        }
         printf(" %d ROW MAXIMUM ELEMENT: %d\n",i+1,max,arr[i][j]);
        
    }
    
    return 0;
}
